{
    "app-id": "com.leinardi.gwe",
    "command": "gwe",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.gnome.SettingsDaemon",
        "--talk-name=org.mate.SettingsDaemon",
        "--filesystem=home:ro",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [
        {
            "name": "python-injector",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "i386": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    },
                    "arm": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    }
                }
            },
            "ensure-writable": [
                "/lib/python*/site-packages/easy-install.pth",
                "/lib/python*/site-packages/setuptools.pth",
                "/app/lib/python*/site-packages/easy-install.pth",
                "/app/lib/python*/site-packages/setuptools.pth"
            ],
            "build-commands": [
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/alecthomas/injector/archive/0.14.1.tar.gz",
                    "sha256": "07ca671ebb587642c0c85646e27768d128dd74e79dc2101f92ece293a17e3aaf"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's/if not platform_/if not dirs/' setup.py"
                    ]
                }
            ]
        },
        {
            "name": "python-matplotlib",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "i386": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    },
                    "arm": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    }
                }
            },
            "ensure-writable": [
                "/lib/python*/site-packages/easy-install.pth",
                "/lib/python*/site-packages/setuptools.pth",
                "/app/lib/python*/site-packages/easy-install.pth",
                "/app/lib/python*/site-packages/setuptools.pth"
            ],
            "build-commands": [
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/matplotlib/matplotlib/archive/v3.0.2.tar.gz",
                    "sha256": "0ac5305a2f0788dc243b61c288f3fc5f61c7c69ff161417db2325cf168b63c04"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's/if not platform_/if not dirs/' setup.py"
                    ]
                }
            ]
        },
        {
            "name": "python-peewee",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
