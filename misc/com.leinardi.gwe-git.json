{
    "app-id": "com.leinardi.gwe",
    "command": "gwe",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.gnome.SettingsDaemon",
        "--talk-name=org.mate.SettingsDaemon",
        "--filesystem=home:ro",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [
        {
            "name": "python-injector",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "i386": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    },
                    "arm": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    }
                }
            },
            "ensure-writable": [
                "/lib/python*/site-packages/easy-install.pth",
                "/lib/python*/site-packages/setuptools.pth",
                "/app/lib/python*/site-packages/easy-install.pth",
                "/app/lib/python*/site-packages/setuptools.pth"
            ],
            "build-commands": [
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/alecthomas/injector/archive/0.14.1.tar.gz",
                    "sha256": "33ac76873fb10a59cd1f042dfbbeab9987228b3bc9364964f3610d8074c070c7"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's/if not platform_/if not dirs/' setup.py"
                    ]
                }
            ]
        },
        {
            "name": "python-matplotlib",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "i386": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    },
                    "arm": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    }
                }
            },
            "ensure-writable": [
                "/lib/python*/site-packages/easy-install.pth",
                "/lib/python*/site-packages/setuptools.pth",
                "/app/lib/python*/site-packages/easy-install.pth",
                "/app/lib/python*/site-packages/setuptools.pth"
            ],
            "build-commands": [
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/matplotlib/matplotlib/archive/v3.0.2.tar.gz",
                    "sha256": "4682a2a4e66eed054d78a1eae5936d2174e8c145486db59f12a585aef991fad5"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's/if not platform_/if not dirs/' setup.py"
                    ]
                }
            ]
        },
        {
            "name": "python-peewee",
            "buildsystem": "simple",
