{
  "app-id": "com.leinardi.gwe",
  "command": "gwe",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.30",
  "sdk": "org.gnome.Sdk",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--device=all",
    "--talk-name=org.kde.StatusNotifierWatcher",
    "--talk-name=org.freedesktop.Flatpak"
  ],
  "modules": [
    "shared-modules/libappindicator-gtk3-introspection-12.10.json",
    {
      "name": "libdazzle",
      "config-opts": [
        "--buildtype=debugoptimized"
      ],
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.gnome.org/GNOME/libdazzle/-/archive/3.31.4/libdazzle-3.31.4.tar.gz",
          "sha256": "f3abae603ff19234d9315edb15db21837897f9d499eead38035bf6f668bc29d7"
        }
      ]
    },
    "python3-injector.json",
    "python3-setuptools.json",
    "python3-python-dateutil.json",
    "python3-matplotlib.json",
    "python3-peewee.json",
    "python3-py3nvml.json",
    "python3-pygobject.json",
    "python3-pyxdg.json",
    "python3-requests.json",
    "python3-rx.json",
    {
      "name": "gwe",
      "buildsystem": "meson",
      "config-opts": [
        "--buildtype=release"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.com/leinardi/gwe.git",
          "branch": "feature/meson"
        }
      ]
    }
  ]
}
